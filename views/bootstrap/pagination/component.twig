<nav aria-label="Page navigation">
    <ul class="pagination">
        {% if posts.pagination.prev %}
            <li class="page-item"><a class="page-link" href="{{posts.pagination.prev.link}}">Back</a></li>
        {% endif %}
        {% for page in posts.pagination.pages %}
            {% if page.link %}
                <li class="page-item"><a href="{{page.link}}" class="page-link">{{page.title}}</a></li>
            {% else %}
                <li {{ (page.current) ? 'class="page-item active"': 'class="page-item"' }}><span class="page-link">{{page.title}}</span></li>
            {% endif %}
        {% endfor %}
        {% if posts.pagination.next %}
            <li class="page-item"><a class="page-link" href="{{posts.pagination.next.link}}">Next</a></li>
        {% endif %}
    </ul>
</nav>
